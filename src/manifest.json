{
  "manifest_version": 3,
  "name": "Tab Snoozey",
  "description": "Snooze tabs and windows and have then automatically re-open at a selected time.",
  "version": "1.0.1",

  "permissions": [
    "storage",
    "alarms",
    "tabs" 
  ],

  "options_page": "options.html",
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-32.png"
  },
  "icons": {
    "128": "icon-128.png"
  }
}
